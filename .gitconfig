[alias]
    st = status
    co = checkout
    sw = switch

[init]
    defaultBranch = main

[diff]
    colorMoved = default

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only
[add.interactive]
    useBuiltin = false # required for git 2.37.0

[delta]
    line-numbers = true

    # TODO this doesn't seem to do anything for git diff at least?
    #hunk-header-file-style = blue box

    hunk-header-decoration-style = blue ul

[merge]
    tool = meld

[fetch]
    prune = true
