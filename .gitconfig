[alias]
    st = status
    co = checkout
    sw = switch

[init]
    defaultBranch = main

[diff]
    colorMoved = default

[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    line-numbers = true

    # TODO this doesn't seem to do anything for git diff at least?
    #hunk-header-file-style = blue box

    hunk-header-decoration-style = blue ul

[merge]
    tool = meld

[fetch]
    prune = true
